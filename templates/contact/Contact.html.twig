{% extends 'base.html.twig' %}

{% block title %}Contact - La Cour des Chats{% endblock %}

{% block body %}

<section>
    <div class="background-image-container">
        <!-- Image de fond pour la section de contact -->
        <img src="{{ asset('image/ban/aminities-bg.png') }}" class="img-fluid mx-auto d-block dark-image" style="width: 100%; height: 750px; border-radius: 10px;">
        </br>     
        <!-- Contenu superposé sur l'image de fond -->
        <div class="overlay-content">
            <h1>Contactez-nous</h1>
            <p>Vous avez des questions ou vous souhaitez nous proposer votre projet de collaboration ? Contactez-nous pour le présenter !</p>
            <p>Contactez-nous dès maintenant !</p>
            <form method="post" name="Formulaire de contact">
                <!-- Champs du formulaire de contact -->
                <input type="hidden" name="post_id" value="10">
                <input type="hidden" name="form_id" value="987811a">
                <input type="hidden" name="referer_title" value="Contact">
                <input type="hidden" name="queried_id" value="10">
                <input type="text" name="form_fields[name]" id="form-field-name" placeholder="Prénom" required>
                <input type="text" name="form_fields[name]" id="form-field-name" placeholder="Nom" required>
                <input type="email" name="form_fields[email]" id="form-field-email" placeholder="E-mail" required>
                <input type="tel" name="form_fields[field_8e46596]" id="form-field-field_8e46596" placeholder="Téléphone">
                <textarea name="form_fields[message]" id="form-field-message" rows="4" placeholder="Message"></textarea>
                <button type="submit">Envoyer</button>
            </form>
        </div>
    </div>
</section> 

<section>
    <div class="container mt-5">
        <h3 style="text-align: center;">Vous pouvez nous contacter par nos réseaux ou venir sur place</h3>
        </br>
        <div class="row card-container">
            <!-- Carte 1 : Adresse -->
            <div class="custom-card">
                <div class="card-body">
                    <h5 class="card-title">Adresse</h5>
                    <p class="card-text">14 Rue Gambetta, Tours, France</p>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2746.7746384183043!2d0.6891786160528681!3d47.39081563373817!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47fbeafa472f2a79%3A0x292585c8a66c3aa4!2s18%20Rue%20Gambetta%2C%2037000%20Tours!5e0!3m2!1sen!2sfr!4v1642957881533!5m2!1sen!2sfr"
                    width="150" height="100" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>

            <!-- Carte 2 : Téléphone -->
            <div class="custom-card">
                <div class="card-body">
                    <h5 class="card-title">Téléphone</h5>
                    <p class="card-text">04 66 38 28 67</p>
                </div>
            </div>

            <!-- Carte 3 : Réseaux Sociaux -->
            <div class="custom-card">
                <div class="card-body">
                    <h5 class="card-title">Nos Réseaux</h5>
                    <p class="card-text">
                        <a href="https://www.facebook.com/lejardindeschatsTOURS/?locale=fr_FR" target="_blank" class="btn btn-primary">Facebook</a>
                        <a href="https://www.instagram.com/lacourdeschats/" target="_blank" class="btn btn-danger">Instagram</a>
                        <a href="https://www.tiktok.com/@lacourdeschats" target="_blank" class="btn btn-info">TikTok</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section> 

{% endblock %}
